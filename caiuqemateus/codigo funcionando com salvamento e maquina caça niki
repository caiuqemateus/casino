            <p class="balance">R$ <span id="balance">100</span></p>
            <button class="add-credits" id="addCredits">+ Adicionar Cr√©ditos</button>
        </div>
        
        <div class="tabs">
            <button class="tab active" data-game="coinflip">Cara ou Coroa ü™ô</button>
            <button class="tab" data-game="luckyNumber">N√∫mero da Sorte </button>
            <button class="tab" data-game="colorMatch">Acerte a Cor </button>
            <button class="tab" data-game="slots">Ca√ßa-n√≠queis üé∞</button>
        </div>
        
        <div class="game-section active" id="coinflip">
            <h2 class="game-title">Cara ou Coroa</h2>
            <div class="bet-container">
