            color: #00ff00;
            font-weight: bold;
            animation: pulse 1s infinite alternate;
        }
        
        .lose {
            color: #ff6666;
        }
        
        @keyframes pulse {
            from {
                transform: scale(1);
            }
            to {
                transform: scale(1.1);
            }
        }
        
        .scratched .scratch-cover {
            display: none;
